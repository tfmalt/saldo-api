{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true
  },
  "lib": ["es2019"],
  "include": ["index.ts", "./lib/**/*"],
  "exclude": ["node_modules"]
}
